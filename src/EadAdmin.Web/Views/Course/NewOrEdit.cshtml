@model EadAdmin.Domain.Courses.CourseDto
@{
    ViewData["Title"] = "New or edit course";
}

<div id="pad-wrapper">

    <div class="row">
        <div class="col-md-12">
            <a href="/Course" class="btn">Back</a>
        </div>
    </div>
    <div class="row header">
        <div class="col-md-1">
            <h3>Courses</h3>
        </div>
    </div>
    <div class="row form-wrapper">
        <div class="col-md-12">
            <form id="form" class="form-horizontal" asp-action="Save" asp-controller="Course" asp-anti-forgery
                  data-ajax="true" data-ajax-method="POST" data-ajax-failure="formWhenFail" data-ajax-success="window.location = '/Course'">
                @*<input type="hidden" class="form-control" asp-for="Id">*@
                <div class="form-group">
                    <label class="col-md-2 control-label">Nome</label>
                    <div class="col-md-8">
                        <input type="text" class="form-control" asp-for="Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Description</label>
                    <div class="col-md-8">
                        <textarea type="text" class="form-control" asp-for="Description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Work Load</label>
                    <div class="col-md-2">
                        <input type="text" class="form-control" asp-for="WorkLoad">
                        <span asp-validation-for="WorkLoad" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Target Audience</label>
                    <div class="col-md-2">
                        <select class="form-control" asp-for="TargetAudience">
                            <option value="Student">Student</option>
                            <option value="Academical">Academical</option>
                            <option value="Employee">Employee</option>
                            <option value="Entrepreneur">Entrepreneur</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Price</label>
                    <div class="col-md-2">
                        <input class="form-control" asp-for="Price">
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-8">
                        <button class="btn btn-success">Save</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="/js/jquery.validate.min.js"></script>
    <script src="/js/jquery.validate.unobtrusive.js"></script>
    <script src="/js/jquery.unobtrusive-ajax.min.js"></script>
    <script src="/js/excecaoDeDominio.js"></script>
}